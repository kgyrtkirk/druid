set -e

SUITE_NAME="$1"

if [ -z "$SUITE_NAME" ]; then
  echo "Usage: $0 <suite-name>"
  exit 1
fi

BENCHMARK_SCRIPT=".github/benchmarks/${SUITE_NAME}"

if [ ! -f "$BENCHMARK_SCRIPT" ]; then
  echo "Error: Benchmark script not found: $BENCHMARK_SCRIPT"
  exit 1
fi

echo "Building benchmarks..."
mvn install -pl :druid-benchmarks -am -DskipTests -Pskip-static-checks

echo "Running benchmark: $SUITE_NAME"
OUTPUT_FILE="benchmark-results.json"
"$BENCHMARK_SCRIPT" -rf json -rff "$OUTPUT_FILE"

echo "Preparing artifact directory structure..."
mkdir -p "benchmark-results/${SUITE_NAME}"
mv "$OUTPUT_FILE" "benchmark-results/${SUITE_NAME}/current.json"

echo "Benchmark completed."
